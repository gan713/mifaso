<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/posting_lo_container"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"  >
<com.mifashow.ui.BorderListView 
    android:id="@+id/posting_lv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:divider="@null"
    android:dividerHeight="7dp"/>
<LinearLayout
    android:id="@+id/posting_lo_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/shadow_light"
    android:layout_centerInParent="true" >

    <ImageView
        android:id="@+id/posting_iv_info"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/icon_bow"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/posting_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textColor="@color/shadow_dark"
        android:text="@string/status_loading" />

</LinearLayout>

