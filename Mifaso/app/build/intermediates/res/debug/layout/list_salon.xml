<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="8dip" >

    <com.mifashow.ui.ResizedImageView
        android:id="@+id/salons_iv_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/nofigure" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10.0dip" >

        <TextView
            android:id="@+id/salons_tv_salonName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_loading"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/salons_tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/status_loading"
            android:textColor="@color/shadow_medium"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/salons_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/status_loading"
                android:textColor="@color/emphasize_medium"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/salons_tv_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/salons_tv_price2"
                android:textColor="@color/shadow_medium" />

            <TextView
                android:id="@+id/salons_tv_distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="@string/status_loading"
                android:textColor="@color/shadow_medium"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/AndroidstudioProjects/Mifaso/app/src/main/res/layout/list_salon.xml -->