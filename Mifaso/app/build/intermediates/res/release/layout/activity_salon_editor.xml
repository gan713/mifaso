                    android:id="@+id/salon_tv_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/salon_tv_name" />

                <TextView
                    android:id="@+id/salon_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
