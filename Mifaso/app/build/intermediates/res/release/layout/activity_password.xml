<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/password_sv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape_background" >

    <LinearLayout
        android:id="@+id/password_lo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_panel"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/password_et_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_lock_16"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/password_et_hint_current" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/password_et_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_lock_16"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/password_et_hint_new" />

    </LinearLayout>

